all:tran_main.flash.hex
	avrdude -p m328p -c stk500v1 -b 57600 -P /dev/ttyUSB0 -U flash:w:tran_main.flash.hex
tran_main.flash.hex: tran_main.elf
	avr-objcopy -j .text -j .data -O ihex tran_main.elf tran_main.flash.hex
tran_main.elf: tran.o myrf.o myspi.o
	avr-gcc -mmcu=atmega328p -o tran_main.elf tran.o myrf.o myspi.o
tran.o: transmiter.c
	avr-gcc -Wall -O1 -c -o tran.o -mmcu=atmega328p transmiter.c
myrf.o: myNRF24L01v2.c myNRF24L01v2.h
	avr-gcc -Wall -O1 -c -o myrf.o -mmcu=atmega328p myNRF24L01v2.c
myspi.o: mySPI.c mySPI.h
	avr-gcc -Wall -O1 -c -o myspi.o -mmcu=atmega328p mySPI.c
clean:
	rm myspi.o myrf.o recv.o recv_main.elf recv_main.flash.hex
